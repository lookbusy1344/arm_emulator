<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ARMEmulator.App"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />

        <!-- AvaloniaEdit theme (required for 11.x versions) -->
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <!-- Custom theme resources can be added here -->
        <StyleInclude Source="avares://ARMEmulator/Themes/CustomStyles.axaml" />
    </Application.Styles>
</Application>