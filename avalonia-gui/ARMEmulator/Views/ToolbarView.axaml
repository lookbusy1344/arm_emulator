<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ARMEmulator.ViewModels"
             x:Class="ARMEmulator.Views.ToolbarView"
             x:DataType="vm:MainWindowViewModel">
    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="0,0,0,1"
            Padding="8">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- Status Indicator -->
            <Border Width="16"
                    Height="16"
                    CornerRadius="8"
                    Background="{Binding StatusColor}"
                    ToolTip.Tip="{Binding StatusText}"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0" />

            <!-- Load Button -->
            <Button Content="ðŸ“‚ Load"
                    Command="{Binding LoadProgramCommand}"
                    ToolTip.Tip="Load Program (Ctrl+L)" />

