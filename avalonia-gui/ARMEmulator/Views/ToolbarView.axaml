<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ARMEmulator.ViewModels"
             x:Class="ARMEmulator.Views.ToolbarView"
             x:DataType="vm:MainWindowViewModel">
    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="0,0,0,1"
            Padding="8">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- Status Indicator -->
            <Border Width="16"
                    Height="16"
                    CornerRadius="8"
                    Background="{Binding StatusColor}"
                    ToolTip.Tip="{Binding StatusText}"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0"
                    AutomationProperties.Name="VM Status Indicator"
                    AutomationProperties.HelpText="{Binding StatusText}" />

            <!-- Load Button -->
            <Button Content="ðŸ“‚ Load"
                    Command="{Binding LoadProgramCommand}"
                    ToolTip.Tip="Load Program (Ctrl+L)"
                    AutomationProperties.Name="Load Program"
                    AutomationProperties.AcceleratorKey="Ctrl+L" />

            <!-- Execution Control Buttons -->
            <Separator />
            <Button Content="â–¶ï¸ Run"
                    Command="{Binding RunCommand}"
                    ToolTip.Tip="Run (F5, Ctrl+R)"
                    AutomationProperties.Name="Run Program"
                    AutomationProperties.AcceleratorKey="F5" />
            <Button Content="â¸ï¸ Pause"
                    Command="{Binding PauseCommand}"
                    ToolTip.Tip="Pause (Ctrl+.)"
                    AutomationProperties.Name="Pause Execution"
                    AutomationProperties.AcceleratorKey="Ctrl+Period" />

            <Separator />
            <Button Content="âž¡ï¸ Step"
                    Command="{Binding StepCommand}"
                    ToolTip.Tip="Step (F11, Ctrl+T)"
                    AutomationProperties.Name="Step Single Instruction"
                    AutomationProperties.AcceleratorKey="F11" />
            <Button Content="â¤µï¸ Step Over"
                    Command="{Binding StepOverCommand}"
                    ToolTip.Tip="Step Over (F10, Ctrl+Shift+T)"
                    AutomationProperties.Name="Step Over Function"
                    AutomationProperties.AcceleratorKey="F10" />
            <Button Content="â¤´ï¸ Step Out"
                    Command="{Binding StepOutCommand}"
                    ToolTip.Tip="Step Out (Ctrl+Alt+T)"
                    AutomationProperties.Name="Step Out of Function"
                    AutomationProperties.AcceleratorKey="Ctrl+Alt+T" />

            <Separator />
            <Button Content="ðŸ”„ Reset"
                    Command="{Binding ResetCommand}"
                    ToolTip.Tip="Reset (Ctrl+Shift+R)"
                    AutomationProperties.Name="Reset Virtual Machine"
                    AutomationProperties.AcceleratorKey="Ctrl+Shift+R" />
            <Button Content="ðŸ“ Show PC"
                    Command="{Binding ShowPcCommand}"
                    ToolTip.Tip="Show PC (Ctrl+J)"
                    AutomationProperties.Name="Show Program Counter in Editor"
                    AutomationProperties.AcceleratorKey="Ctrl+J" />
        </StackPanel>
    </Border>
</UserControl>
