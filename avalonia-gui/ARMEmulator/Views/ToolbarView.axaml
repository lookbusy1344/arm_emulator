            <Separator />
            <Button Content="â–¶ï¸ Run"
                    Command="{Binding RunCommand}"
                    ToolTip.Tip="Run (F5, Ctrl+R)" />
            <Button Content="â¸ï¸ Pause"
                    Command="{Binding PauseCommand}"
                    ToolTip.Tip="Pause (Ctrl+.)" />

            <Separator />
            <Button Content="âž¡ï¸ Step"
                    Command="{Binding StepCommand}"
                    ToolTip.Tip="Step (F11, Ctrl+T)" />
            <Button Content="â¤µï¸ Step Over"
                    Command="{Binding StepOverCommand}"
                    ToolTip.Tip="Step Over (F10, Ctrl+Shift+T)" />
            <Button Content="â¤´ï¸ Step Out"
                    Command="{Binding StepOutCommand}"
                    ToolTip.Tip="Step Out (Ctrl+Alt+T)" />

            <Separator />
