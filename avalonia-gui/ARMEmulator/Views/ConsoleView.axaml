<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ARMEmulator.ViewModels"
             x:Class="ARMEmulator.Views.ConsoleView">
    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top"
                       Text="Console Output"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        Spacing="8"
                        Margin="0,8,0,0">
                <TextBlock Text="Input:"
                           VerticalAlignment="Center" />
                <TextBox Width="400"
                         Watermark="Enter input..."
                         VerticalAlignment="Center" />
                <Button Content="Send"
                        VerticalAlignment="Center" />
            </StackPanel>

            <ScrollViewer>
                <TextBlock Text="Console output will appear here..."
                           FontFamily="Consolas,Menlo,Monaco,Courier New,monospace"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
