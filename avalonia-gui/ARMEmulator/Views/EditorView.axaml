<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ARMEmulator.ViewModels"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             x:Class="ARMEmulator.Views.EditorView"
             x:DataType="vm:MainWindowViewModel">
    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="1"
            CornerRadius="4">
        <avaloniaEdit:TextEditor Name="TextEditor"
                                 FontFamily="Consolas,Menlo,Monaco,Courier New,monospace"
                                 FontSize="14"
                                 ShowLineNumbers="True"
                                 WordWrap="False"
                                 Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                 Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                 IsReadOnly="{Binding !IsEditorEditable}"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto" />
    </Border>
</UserControl>
