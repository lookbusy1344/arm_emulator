<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ARMEmulator.ViewModels"
        xmlns:views="using:ARMEmulator.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ARMEmulator.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="ARM Emulator"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600">

    <!-- Keyboard Shortcuts -->
    <Window.KeyBindings>
        <!-- File Operations -->
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenFileCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveFileCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+E" Command="{Binding OpenExampleCommand}" />
        <KeyBinding Gesture="Ctrl+OemComma" Command="{Binding ShowPreferencesCommand}" />

        <!-- Load: Ctrl+L -->
        <KeyBinding Gesture="Ctrl+L" Command="{Binding LoadProgramCommand}" />

        <!-- Run: F5, Ctrl+R -->
        <KeyBinding Gesture="F5" Command="{Binding RunCommand}" />
        <KeyBinding Gesture="Ctrl+R" Command="{Binding RunCommand}" />

        <!-- Pause: Ctrl+. -->
        <KeyBinding Gesture="Ctrl+OemPeriod" Command="{Binding PauseCommand}" />

        <!-- Step: F11, Ctrl+T -->
        <KeyBinding Gesture="F11" Command="{Binding StepCommand}" />
        <KeyBinding Gesture="Ctrl+T" Command="{Binding StepCommand}" />

        <!-- Step Over: F10, Ctrl+Shift+T -->
        <KeyBinding Gesture="F10" Command="{Binding StepOverCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+T" Command="{Binding StepOverCommand}" />

        <!-- Step Out: Ctrl+Alt+T -->
        <KeyBinding Gesture="Ctrl+Alt+T" Command="{Binding StepOutCommand}" />

        <!-- Reset: Ctrl+Shift+R -->
        <KeyBinding Gesture="Ctrl+Shift+R" Command="{Binding ResetCommand}" />

        <!-- Show PC: Ctrl+J -->
        <KeyBinding Gesture="Ctrl+J" Command="{Binding ShowPcCommand}" />
    </Window.KeyBindings>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGesture="Ctrl+O" />
                <MenuItem Header="_Save" Command="{Binding SaveFileCommand}" InputGesture="Ctrl+S" />
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGesture="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Header="_Recent Files" ItemsSource="{Binding RecentFiles}">
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <MenuItem Header="{Binding FileName}" Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).OpenRecentFileCommand}" CommandParameter="{Binding Path}" />
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Examples..." Command="{Binding OpenExampleCommand}" InputGesture="Ctrl+Shift+E" />
                <Separator />
                <MenuItem Header="_Preferences..." Command="{Binding ShowPreferencesCommand}" InputGesture="Ctrl+," />
                <MenuItem Header="_About..." Command="{Binding ShowAboutCommand}" />
            </MenuItem>
        </Menu>

        <!-- Toolbar at the top -->
        <views:ToolbarView DockPanel.Dock="Top" />

        <!-- Main content area -->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Editor + Right Panel area -->
                <RowDefinition Height="3*" MinHeight="200" />
                <!-- Vertical splitter -->
                <RowDefinition Height="Auto" />
                <!-- Console area -->
                <RowDefinition Height="*" MinHeight="100" />
            </Grid.RowDefinitions>

            <!-- Top section: Editor + Right Panel with horizontal split -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <!-- Editor area -->
                    <ColumnDefinition Width="2*" MinWidth="300" />
                    <!-- Horizontal splitter -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Right panel area -->
                    <ColumnDefinition Width="*" MinWidth="250" />
                </Grid.ColumnDefinitions>

                <!-- Editor View -->
                <views:EditorView Grid.Column="0" />

                <!-- Horizontal Splitter -->
                <GridSplitter Grid.Column="1"
                              Width="5"
                              Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              ResizeDirection="Columns"
                              HorizontalAlignment="Stretch" />

                <!-- Right Panel with tabs -->
                <views:RightPanelView Grid.Column="2" />
            </Grid>

            <!-- Vertical Splitter -->
            <GridSplitter Grid.Row="1"
                          Height="5"
                          Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          ResizeDirection="Rows"
                          HorizontalAlignment="Stretch" />

            <!-- Console View -->
            <views:ConsoleView Grid.Row="2" />
        </Grid>
    </DockPanel>
</Window>
